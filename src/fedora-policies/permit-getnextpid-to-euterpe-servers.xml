<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:1.0:policy"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        PolicyId="permit-euterpe-if-euadmin-or-euserver"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">
  <Description>Allow users accessing Fedora from Euterpe application
to call the Fedora API-M method getNextPid.
</Description>
<!-- NOTE: this policy should be phased out - should not be needed
once we start using ARKs for object pids -->

  <Target>
    <Subjects>
      <AnySubject/>
    </Subjects>
    <Resources>
      <AnyResource/>
    </Resources>    
    <Actions>
      <Action>
	<ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
	  <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">urn:fedora:names:fedora:2.1:action:id-getNextPid</AttributeValue>  	
          <ActionAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:fedora:names:fedora:2.1:action:id"/>
	</ActionMatch>
      </Action>
    </Actions>    
  </Target>


  <Rule RuleId="permit-euservers" Effect="Permit">
  <!-- permit access to euterpe objects from configured servers by IP address -->
    <Target>
      <Subjects>
        <AnySubject/>
      </Subjects>
      <Resources>
        <AnyResource/>
      </Resources>
      <Actions>
        <AnyAction/>
      </Actions>
    </Target>

    <Condition FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-at-least-one-member-of">
          <EnvironmentAttributeDesignator AttributeId="urn:fedora:names:fedora:2.1:environment:httpRequest:clientIpAddress" DataType="http://www.w3.org/2001/XMLSchema#string"/>
          <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-bag">
            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">170.140.208.41</AttributeValue> <!-- rebecca -->
            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">170.140.208.75</AttributeValue> <!-- waterhouse -->
            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">170.140.210.175</AttributeValue> <!-- ben -->
            <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">170.140.223.38</AttributeValue> <!-- brutus -->
      </Apply>
    </Condition>

  </Rule>

  <Rule RuleId="deny-the-rest" Effect="Deny"/> 

</Policy>
